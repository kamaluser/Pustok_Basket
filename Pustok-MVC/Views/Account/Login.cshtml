@model MemberLoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="site-wrapper" id="top">

    <!--=============================================
    =            Login Register page content         =
    =============================================-->
    <main class="page-section inner-page-sec-padding-bottom">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Enter account</h4>
                            <div class="row">
                                <div class="col-12 mb--20">
                                    <label for="email">Email</label>
                                    <input class="mb-0 form-control" asp-for="Email" type="email" id="email" placeholder="Enter Your Email Address Here..">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="col-lg-12 mb--20">
                                    <label for="password">Password</label>
                                    <input asp-for="Password" class="mb-0 form-control" type="password" id="password" placeholder="Enter your password">
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-outlined">Login</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>